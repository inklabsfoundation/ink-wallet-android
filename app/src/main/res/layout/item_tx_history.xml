<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="vertical"
    android:paddingLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="5dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/iv_tx_status"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_incoming_transaction" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:id="@+id/tv_tx_hash"
                android:layout_weight="1"
                android:text="JDSAKLD_DDSDSSD"
                android:textColor="@color/black8TextColor"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:id="@+id/tv_tx_date"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="2017/12/27"
                android:textColor="@color/lightGrayTextColor"
                android:textSize="14dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="4"
            android:id="@+id/tv_tx_balance"
            android:textColor="@color/blueTextColor"
            android:gravity="center_vertical|end"
            android:text="+12,99688 INK"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_right"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd" />
</LinearLayout>